@model WebApplication1.ConcertsArtists

@{
    ViewData["Title"] = "Видалити виконавця";
}

<h1>Видалити цього виконавця з концерту?</h1>

@*<h3>Are you sure you want to delete this?</h3>*@
<div>
    @*<h4>ConcertsArtists</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Artist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concert)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concert.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутись</a>
    </form>
</div>
