@model IEnumerable<WebApplication1.ConcertsArtists>

@{
    ViewData["Title"] = "Lineup";
}

<h3>@ViewBag.ConcertName lineup</h3>
<hr/>

<p>
    <a href="@Url.Action("Create", "ArtistsByConcerts", new {concertId = @ViewBag.ConcertId })" class="btn btn-success">Add artist</a>
    <a class="btn btn-secondary" asp-controller="Concerts" asp-action="Index">Go back</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Artist</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Artist.Name)</td>
                <td>
                    <div class="text-center">
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-route-concertId="@ViewBag.ConcertId" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
