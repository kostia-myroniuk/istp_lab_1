            </div>
            <input type="hidden" value="@ViewBag.CountryId" name="CountryId" />
            @*<div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>*@
        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-controller="Countries" asp-action="Index" class="btn btn-secondary">Go back</a>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
