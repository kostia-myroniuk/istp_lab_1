@model IEnumerable<WebApplication1.Artists>

@{
    ViewData["Title"] = "Виконавці";
}

<h1>Виконавці</h1>

<p>
    <a asp-action="Create">Додати виконавця</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @*<a asp-action="Details" asp-route-id="@item.Id">Деталі</a> |*@
                    <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br>

<div>
    <h3>Імпорт виконавців (Excel)</h3>
    @using (Html.BeginForm("Import", "Artists", FormMethod.Post, new { enctype = "multipart/form-data", id = "frm-excel" }))
    {
        <div>
            <input type="file" name="fileExcel", id="fileExcel"/>
            <div>
                <input type="submit" value="Завантажити" />
            </div>
        </div>
    }
</div>