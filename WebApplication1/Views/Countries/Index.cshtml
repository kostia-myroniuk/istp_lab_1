@model IEnumerable<WebApplication1.Countries>

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>
<hr/>

<p><a asp-action="Create" class="btn btn-success">Add country</a></p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <div class="float-right">
                        <a asp-controller="Artists" asp-action="Export" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Export artists</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Cities</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
